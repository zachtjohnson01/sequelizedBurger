<div class="container text-center">
    <div class="row">
        <div class="col-md-12">
            <h1>Devour Burgers</h1>
            <img src="/assets/images/burger2.jpg" class="img-fluid">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Burger Name" id="burgerName">
                <div class="input-group-append">
                    <button class="btn btn-warning" type="button" id="addBurger">Add Burger</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center my-3">If you cook it, they will Devour</h2>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2 class="text-center my-3">DEVOURED</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
</div>




